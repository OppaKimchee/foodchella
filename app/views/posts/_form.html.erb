<%= form_for @post do |post| %>
  <% if @post.errors.any? %>
    <div class="error_messages text-center">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @post.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field text-center" id="sizing-addon1">
    <%= post.label :description %>
    <%= post.text_field :description, class: "form-control"%>
  <div class="actions text-center" style="margin: 10px auto">
    <%= submit_tag "Update!",class: 'btn btn-success'%>
    <%= @post.id ? raw("<a class='btn btn-warning' id='editCancel'>Cancel</a>") : "" %> <br><br>
    <%= link_to 'Delete Post', @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } if current_user %>
  </div>
<% end %>
