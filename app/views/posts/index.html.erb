<h1 class="text-center">Top Posts</h1>
<ul class="text-center">
	<div class="container">
		<% @posts.each_slice(3) do |post| %>
			<div class="row">
				<% post.each do |post| %>
				<div class="col-md-4">
					<div class="col-xs-12">
						<%= link_to post_path(post), class: "image-container" do%>
							<%= image_tag post.image.url, class: "img-hover" %>
						  <div class="middle">
						  	<%= post.description %><br>
						  	Posted by: <%= post.user.email %> <br>
							<span class='glyphicon glyphicon-heart'></span><%= post.votes.count %>
						  </div>
						<% end %>
						Posted on <%= post.created_at.strftime("%B %d, %Y @ %I:%M:%S %p") %>
					</div>
				</div>
				<%end%>
			</div>
		<% end %>
	</div>
</ul>

